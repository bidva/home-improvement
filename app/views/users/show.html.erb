<div class="container">
    <div class="row">
        <div class="col-md-12 ">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>User Profile</h4>
                </div>
                <div class="panel-body" style="padding-top: 0px;">
                    <div class="box box-info">
                        <div class="box-body">
                            <div class="row profile-header">
                                <div class="col-sm-6 img-profile">
                                    <div align="center"> <img alt="User Pic" src=<%=@user.image %> id="profile-image1" class="img-circle img-responsive"> </div>
                                    <!-- /input-group -->
                                </div>
                                <div class="col-sm-6">
                                    <h4 class="profile-name"><%= @user.name %></h4>
                                    </span>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="profile-info">
                                <div class="col-sm-5 col-xs-6 title-info ">Email:</div>
                                <div class="col-sm-7 col-xs-6 ">
                                    <%=@user.email %>
                                </div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>
                                <div class="col-sm-5 col-xs-6 title-info ">Number of sign in:</div>
                                <div class="col-sm-7">
                                    <%=@user.sign_in_count %>
                                </div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>
                                <div class="col-sm-5 col-xs-6 title-info ">Last sign in at:</div>
                                <div class="col-sm-7">
                                    <%=@user.last_sign_in_at %>
                                </div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>
                                <div class="col-sm-5 col-xs-6 title-info ">created at:</div>
                                <div class="col-sm-7">
                                    <%=@user.created_at %>
                                </div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>
                                <div class="col-sm-5 col-xs-6 title-info ">provider:</div>
                                <div class="col-sm-7">
                                    <%=@user.provider %>
                                </div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>
                                <div class="col-sm-5 col-xs-6 title-info ">Role:</div>
                                <div class="col-sm-7">
                                    <%=@user.role.name %>
                                </div>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>