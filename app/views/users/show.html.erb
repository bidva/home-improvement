                            <div class="bot-border"></div>

                            <div class="col-sm-5 col-xs-6 tital ">Last sign in at:</div>
                            <div class="col-sm-7"> <%= @user.last_sign_in_at %></div>
                            <div class="clearfix"></div>
                            <div class="bot-border"></div>

                            <div class="col-sm-5 col-xs-6 tital ">created at:</div>
                            <div class="col-sm-7"> <%= @user.created_at %></div>
                            <div class="clearfix"></div>
                            <div class="bot-border"></div>

                            <div class="col-sm-5 col-xs-6 tital ">provider:</div>
                            <div class="col-sm-7"> <%= @user.provider %></div>
                            <div class="clearfix"></div>
                            <div class="bot-border"></div>


                            <div class="col-sm-5 col-xs-6 tital ">Role:</div>
                            <div class="col-sm-7"> <%= @user.role.name %></div>

