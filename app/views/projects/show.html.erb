<div class="row">
        <div class="panel panel-default">
        <div class="panel-heading">
        <h3 class="">
          <strong>Name: </strong><%= @project.name %>
        </h3>
        </div>
        <div class="panel-body">
          <div class="project-content">
            <%= raw(@project.desc) %>
          </div>
          <table class="table">
            <tr>
              <td>
                <span class="has-tooltip" data-toggle="tooltip" title="<%=@project.public ? "Public" : "Private" %>">
                  <% if @project.public? %>
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                  <% else %>
                    <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
                  <% end %>
                </span>
              </td>
              <td><strong>stimate effort: </strong><%= @project.estimated_effort %></td>
              <td><strong>actual effort: </strong><%= @project.actual_effort %></td>
              <td><strong>status: </strong><%= @project.status %></td>
              <td><strong>Created by:</strong><%= @project.user.email %></td>
            </tr>
          </table>
        </div>
      </div>
</div>

<div class="row">
  <h4>Comments</h4>
  <% if @project.public||@current_user.admin?||@project.owned?(@current_user)%>
    <div class="comment-wrap">
        <div class="photo">
            <div class="avatar" style="background-image: url('<%=current_user.image%>')"></div>
        </div>
        <div class="comment-block">
            <%= simple_form_for([@project, @project.comments.build]) do |f| %>
                <div class="form-group">
                    <%= f.input :text, placeholder: 'Add comment...'%>
                </div>
                <div class="form-group">
                    <%= f.button :submit, class: 'btn btn-primary' %>
                </div>
                <% end %>
        </div>
    </div>
  <% end %>
  <% @project.comments.each do |comment| %>
    <% next if comment.id==nil %>
    <%= render 'comment', comment: comment %>
  <% end %>
</div>


<% if policy(@project).edit? %>
    <%= link_to 'Edit', edit_project_path(@project), class:"btn btn-primary comment-edit-btns" %>
          <% end %>
            <%= link_to 'Back', projects_path, class:"btn btn-primary comment-btns" %>