<div class="row">
  <div class="col-sm-11 col-xs-12 blog-content">
      <p>
          <strong>Name:</strong>
          <%= @project.name %>
      </p>

      <p>
          <strong>Desc:</strong>
          <%= @project.desc %>
      </p>

      <p>
          <strong>Public:</strong>
          <%= @project.public %>
      </p>

      <p>
          <strong>Estimated effort:</strong>
          <%= @project.estimated_effort %>
      </p>

      <p>
          <strong>Actual effort:</strong>
          <%= @project.actual_effort %>
      </p>

      <p>
          <strong>Status:</strong>
          <%= @project.status %>
      </p>
  </div>
</div>

<div class="row">
  <h4>Comments</h4>
  <% @project.comments.each do |comment| %>
    <%= render 'comment', comment: comment %>
  <% end %>
  <div class="comment-wrap">
      <div class="photo">
          <div class="avatar" style="background-image: url('<%=current_user.image%>')"></div>
      </div>
      <div class="comment-block">
          <%= simple_form_for([@project, @project.comments.build]) do |f| %>
              <div class="form-group">
                  <%= f.input :text,  as: :text, placeholder: 'Add comment...'%>
              </div>
              <div class="form-group">
                  <%= f.button :submit %>
              </div>
              <% end %>
      </div>
  </div>
</div>


<% if policy(@project).edit? %>
    <%= link_to 'Edit', edit_project_path(@project), class:"btn btn-primary" %>
        |
        <% end %>
            <%= link_to 'Back', projects_path, class:"btn btn-primary" %>